@model BanqueTardi.Models.Operation

@{
    ViewData["Title"] = "Create";
}

<h1>Nouvelle opération compte @ViewBag.NumeroCompte</h1>
<div>
    @Html.ValidationMessage("Echec", "", new { @class = "text-danger" })
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="CompteID" type="hidden" value="@ViewBag.CompteID">
            <div class="form-group">
                <label asp-for="TypeOperation" class="control-label"></label>
                <select asp-for="TypeOperation" class="form-control" asp-items="ViewBag.TypeOperation">
                    <option value="">-- Choisir type d'operation --</option>
                </select>
                <span asp-validation-for="TypeOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Montant" class="control-label"></label>
                <input asp-for="Montant" class="form-control" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libelle" class="control-label"></label>
                <input asp-for="Libelle" class="form-control" />
                <span asp-validation-for="Libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Comptes" asp-route-id="@ViewBag.ClientID">Gérer client</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
