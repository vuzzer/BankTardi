@model BanqueTardi.Models.Compte

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier compte @Model.ClientID</h1>

@if (ViewBag.Message != null)
{
    <div class="badge badge-danger">
        <span>@ViewBag.Message</span>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompteID" />
            <div class="form-group">
                <label asp-for="TypeCompte" class="control-label"></label>
                <select asp-for="TypeCompte" asp-items="ViewBag.TypeCompte" class="form-control">
                    <option value="">-- Choisir type de compte --</option>
                </select>
                <span asp-validation-for="TypeCompte" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Solde" class="control-label">Solde d'ouverture</label>
                <input asp-for="Solde" class="form-control" />
                <span asp-validation-for="Solde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" asp-route-id="@ViewBag.ClientID">Gérer client</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
